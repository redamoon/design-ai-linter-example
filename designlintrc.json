{
  "source": {
    "type": "tokensJson",
    "path": "./tokens.json"
  },
  "rules": {
    "naming-convention": {
      "severity": "error",
      "pattern": "^([a-z]+)(\\.[a-z0-9\\-]+)*$"
    },
    "raw-values": {
      "severity": "warn"
    },
    "duplicates": {
      "severity": "warn"
    },
    "ai-naming-consistency": {
      "severity": "warn"
    },
    "ai-spacing-consistency": {
      "severity": "warn"
    },
    "ai-design-complexity": {
      "severity": "info"
    },
    "custom-rules": []
  },
  "report": {
    "format": ["console"],
    "outputPath": "./reports"
  }
}

